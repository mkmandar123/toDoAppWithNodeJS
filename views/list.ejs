<%- include("header") -%>

<div class="box" id="heading">
  <h1> <%= listTitle %> </h1>
</div>

<div class="box">
  <% for (let i=0; i<items.length; i++) { %>
  <div class="item">
    <form action="/delete" method="post">
      <input type="checkbox" onChange="this.form.submit()">
      <input type="hidden" name="checkedItem" value=<%=items[i]._id %>>
      <input type="hidden" name="listCurrent" value="<%= listTitle%>">
    </form>
    <p><%=items[i].itemName%></p>

  </div>
  <% } %>

  <form class="item" action="/" method="post">
    <input type="hidden" name="listTitle" value="<%=listTitle%>">
    <input type="text" name="newItem" placeholder="New Item" autocomplete="off">
    <button type="submit" name="list">+</button>
  </form>
</div>

<%- include("footer") -%>
